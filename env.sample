# Clinic Review Kiosk - Environment Variables
# Copy this file to .env and update with your actual values

# OpenAI API Key (required for AI review generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Place ID (optional - for Google review links)
GOOGLE_PLACE_ID=ChIJ_your_google_place_id_here

# Clinic Name (optional - used for Google search fallback when Place ID is not available)
CLINIC_NAME=Dr. Sarah Clinic

# Admin Password (required for login)
ADMIN_PASSWORD=your-secure-admin-password-here

# Secret Key (required for sessions)
SECRET_KEY=your-secret-key-for-sessions-here 

# Database (optional)
# Override default SQLite path or point to external DB engine.
# Examples:
#   sqlite: DATABASE_URL=sqlite:////data/clinic_reviews.db
#   postgres: DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname
#   mysql: DATABASE_URL=mysql+pymysql://user:pass@host:3306/dbname
# DATABASE_URL=

# Seed control (optional)
# Set to true to prevent default seeding on startup (useful in production where DB already has data)
# SKIP_DB_SEED=true